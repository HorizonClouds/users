  "bugs": {
    "url": "https://github.com/HorizonClouds/simple-mern-microservice/issues"
  },
  "homepage": "https://github.com/HorizonClouds/simple-mern-microservice#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "logger": "^0.0.1",
    "mongoose": "^8.8.0",
    "sinon": "^19.0.2",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "chai-http": "^5.1.1",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "mongodb-memory-server": "^10.1.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  }
